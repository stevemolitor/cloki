(ns cloki-test
  (:use clojure.test)
  (:use cloki))

(def test-wiki "http://localhost/~steve/mediawiki/api.php")
(def test-user "Admin")
(def test-password "walter")

; (use-fixtures :each delete-pages)

(deftest test-login
  (let [session (login test-wiki test-user test-password)]
    (is (not (nil? (:cookies @(:state session)))))
    (is (= test-wiki (:url session)))))

(deftest test-logout
  (let [session (login test-wiki test-user test-password)
        state (:state session)]
    (is (not (empty? (:cookies @state))))
    (logout session)
    (is (empty? (:cookies @state)))
    (is (nil? (:edit-token @state)))))

(deftest test-with-login
  (with-login [session (login test-wiki test-user test-password)]
    (is (not (nil? (:cookies @(:state session)))))
    (is (= test-wiki (:url session)))))



(def sess (login test-wiki test-user test-password)))

(with-out-str (login test-wiki test-user test-password))

(with-out-str (query sess {"prop" "info", "intoken" "edit", "title" "xxx"}))

(defprotocol Foo)

(defrecord Bar []
  Foo)